---
// @ts-ignore
import { Icon } from "astro-icon";
import Link from "@components/ui/link.astro";
import { localizePath } from "astro-i18next";
import { t } from "i18next";

const features = [
	{
		title: "Fractional CTO",
		description:
			"Development mistakes can be made that can cost your company time and money. A fractional CTO can help you avoid these mistakes and ensure that your technology is on the right track.",
		icon: "bx:bxs-briefcase",
		url: "https://astro.build/",
	},
	{
		title: "Web Development",
		description:
			"We're experts in building websites and web applications using modern technologies. We can help you build a platform that will help you grow your business now and tomorrow.",
		icon: "bx:bxs-window-alt",
		url: "https://alpinejs.dev/",
	},
	{
		title: "Mobile Development",
		description:
			"We know the limitations of mobile devices and how to architect apps that work well on them. We can help you build a mobile app that will help you grow your business now and tomorrow.",
		icon: "bx:bxs-data",
		url: "https://tailwindcss.com/",
	},
	{
		title: "Business Administration",
		description: "It's important to have a solid business plan and strategy in place before you start building your product.",
		icon: "bx:bxs-bot",
		url: "https://github.com/yassinedoghri/astro-i18next",
	},
	{
		title: "Build Capability",
		description: "Business logic + data = an asset. We can help you build an API that will allow you to leverage data in new ways.",
		icon: "bx:bxs-file-find",
		url: "https://tailwindcss.com/docs/dark-mode",
	},
	{
		title: "Team Leadership",
		description: "We can help you manage delivery teams and ensure that your product is delivered on time and on budget.",
		icon: "bx:bxs-user",
		url: "https://giscus.app/",
	},
];
---

<div class="relative mx-auto max-w-5xl px-6 lg:px-8">
	<div class="mx-auto max-w-2xl lg:text-center">
		<h2 class="text-base font-semibold leading-7 text-black dark:text-white">{t("features.title")}</h2>
		<p class="mt-2 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">{t("features.subtitle")}</p>
		<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
			{t("features.description")}
		</p>
	</div>
	<div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
		<dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
			{
				features.map((item) => (
					<div class="flex flex-col">
						<dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-black dark:text-white">
							<div class="h-5 w-5 flex-none text-black dark:text-white">
								<Icon name={item.icon} />
							</div>
							{item.title}
						</dt>
						<dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-900 dark:text-gray-100">
							<p class="flex-auto">{t(item.description)}</p>
						</dd>
					</div>
				))
			}
		</dl>
	</div>
</div>
