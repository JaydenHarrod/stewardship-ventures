---
import Link from "@components/ui/link.astro";
import abstractDottedGlobeIllustration from "assets/abstract-dotted-globe-illustration.png";
import { Image } from "astro:assets";
import { t } from "i18next";

const { dynamic = false } = Astro.props;
---

<div class="sm:pt-10">
	<div class="mx-auto max-w-7xl pt-14">
		<div class="mx-auto max-w-2xl text-center">
			<h1 class="text-4xl font-bold tracking-tight bg-gradient-to-br from-slate-100 to-slate-400 text-transparent bg-clip-text sm:text-6xl">
				{t("hero.title")}
			</h1>
			<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
				{t("hero.subtitle")}
			</p>
		</div>
		<div class="flex justify-center items-center mt-4 md:mt-8">
			<Image class="inline-block mt-12 md:mt-20" src={abstractDottedGlobeIllustration} alt="Astros" width={600} height={600} loading="eager" />
		</div>
	</div>
</div>
