---
import { changeLanguage } from "i18next";
import Layout from "@layouts/Layout.astro";
import { localizePath } from "astro-i18next";

changeLanguage("en");

const title = `Error 404`;
---

<Layout title="Stewardship Ventures - 404">
	<section class="flex items-center h-full p-16 text-gray-300">
		<div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
			<div class="max-w-md text-center">
				<h2 class="mb-8 font-bold text-9xl">
					<span class="sr-only">Error</span>
					<span class="text-primary">404</span>
				</h2>
				<p class="text-3xl font-semibold md:text-3xl mb-4">Houston, we have a problem.</p>
				<a rel="noopener noreferrer" href={localizePath("/")} class="btn underline">Return to homepage</a>
			</div>
		</div>
	</section>
</Layout>
