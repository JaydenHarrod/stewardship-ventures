---
import { changeLanguage } from "i18next";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingPlan from "@components/pricing.astro";
import ServiceOffering from "@components/service-offering.astro";
import Consulting from "@components/consulting.astro";
import Companies from "@components/companies.astro";

changeLanguage("en");

const pricingData = [
	{
		name: "On Demand Advice",
		price: "$450/m",
		duration: "Asynchronous",
		positions: 5,
		features: [
			"Private Slack channel",
			"Unlimited questions",
			"1 question at a time",
			"Asynchronous only",
			"Reply within 24 hours",
			"Technology consultant",
			"Startup experience",
			"Month-to-month",
		],
		button: {
			text: "Subscribe",
			link: "/contact",
		},
	},
	{
		name: "Freelance Staff Engineer",
		price: "$500/day",
		duration: "Part Time",
		positions: 1,
		features: [
			"Super & Insurance inclusive",
			"Complex coding solutions",
			"Engineering leadership",
			"Adapatable gap filler",
			"No recruitment waits",
			"Embedded in your team",
			"Predictable hours",
			"BYO outcomes",
		],
		button: {
			text: "Book a call",
			link: "/contact",
		},
	},
	{
		name: "Freelance Staff Engineer",
		price: "$1,000/day",
		duration: "Full Time",
		positions: 1,
		features: [
			"Super & Insurance inclusive",
			"Complex coding solutions",
			"Engineering leadership",
			"Adapatable gap filler",
			"No recruitment waits",
			"Embedded in your team",
			"Predictable hours",
			"BYO outcomes",
		],
		button: {
			text: "Book a call",
			link: "/contact",
		},
	},
];
---

<Layout title="Stewardship Ventures - Technology Startup Services">
	<Container>
		<Sectionhead>
			<Fragment slot="title">Services</Fragment>
			<Fragment slot="subtitle">Technologists On Demand</Fragment>
		</Sectionhead>

		<div class="mx-auto prose prose-xl text-center dark:prose-invert mt-14 mb-20 md:mb-20">
			<p>
				The failure rate for new startups is <span class="underline">90%</span>. 10% of <span class="font-bold">new businesses</span>
				 don't survive the <span class="font-bold">first year</span>. <span class="italic">First-time</span> startup founders have a success
				rate of <span class="underline">18%</span>.
			</p>
		</div>
		<div class="mx-auto prose prose-xl text-center dark:prose-invert mb-20 md:mb-60">
			<p>
				We're seasoned <span class="text-orange-400">product & engineering</span> leaders from <span class="text-purple-400">
					award-winning startups.
				</span>We've got scars but ultimately we learned how to navigate the ship and defy the statistics. <span
					class="font-bold text-neutral-400">
					Now our mission is to help you do the same.
				</span>
			</p>
			<Companies />
		</div>

		<ServiceOffering />
		<Consulting />

		<p
			class="text-3xl font-bold text-center mt-20 mb-10 tracking-tight sm:text-4xl bg-gradient-to-b from-neutral-100 to-neutral-400 text-transparent bg-clip-text">
			Plans & Availability
		</p>
		<div class="grid lg:grid-cols-3 grid-cols-1 gap-8 mx-auto max-w-5xl">
			{pricingData.map((item) => <PricingPlan plan={item} />)}
		</div>
	</Container>
</Layout>
