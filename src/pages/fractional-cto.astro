---
import { changeLanguage } from "i18next";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingPlan from "@components/pricing.astro";

changeLanguage("en");

const pricingData = [
	{
		name: "Minimal CTO",
		price: "$5,000/m",
		duration: "30 hours per month",
		features: [
			"Seasoned technology leader",
			"Sounding board for ideas",
			"Flexible - no equity fees",
			"Monthly check-ins",
			"Save time & money",
			"Ask questions asycnchronously",
		],
		button: {
			text: "Get Started",
			link: "/contact",
		},
	},
	{
		name: "Fractional CTO",
		price: "$10,000/m",
		duration: "60 hours per month",
		features: [
			"Limit risk and libailities",
			"Assist operating functions",
			"Strategic planning",
			"Manage delivery",
			"Manage people",
			"Tools & process",
			"Build capability",
		],
		button: {
			text: "Get Started",
			link: "/contact",
		},
	},
	{
		name: "Part Time CTO",
		price: "$15,000/m",
		duration: "90 hours per month",
		features: [
			"Limit risk and libailities",
			"Assist operating functions",
			"Strategic planning",
			"Manage delivery",
			"Manage people",
			"Tools & process",
			"Build capability",
		],
		button: {
			text: "Get Started",
			link: "/contact",
		},
	},
];
---

<Layout title="Stewardship Ventures - Pricing">
	<Container>
		<Sectionhead>
			<Fragment slot="title">Fractional CTO</Fragment>
			<Fragment slot="subtitle">Technology Leadership On Demand</Fragment>
		</Sectionhead>

		<div class="mx-auto prose prose-xl text-center dark:prose-invert mt-14">
			<p>
				Deligate the management of your technology operation to us and focus on your core business. We can steward your technology operation
				for a fraction of the time & cost.
			</p>
		</div>

		<div class="grid lg:grid-cols-3 grid-cols-1 gap-8 mx-auto max-w-5xl mt-20">
			{pricingData.map((item) => <PricingPlan plan={item} />)}
		</div>
	</Container>
</Layout>
