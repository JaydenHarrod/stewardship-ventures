---
import { changeLanguage } from "i18next";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingPlan from "@components/pricing.astro";

changeLanguage("en");

const pricingData = [
	{
		name: "Advisory CTO",
		price: "$3,500/m",
		features: [
			"5 hours / week",
			"Access to a seasoned technology leader",
			"We spend time to understand your business",
			"No equity loss or long-term commitments",
			"Monthly risk & recommendations report",
			"Save time & money avoiding mistakes",
			"Avaliable up to 4 hours of meetings",
			"Ask questions asycnchronously",
			"Get a second opinion",
			"Fully remote",
		],
		button: {
			text: "Get Started",
			link: "/contact",
		},
	},
	{
		name: "Fractional CTO",
		price: "$15,000/m",
		features: [
			"25 hours / week",
			"Includes 'Advising CTO'",
			"Assist operating functions",
			"Limit risk and libailities",
			"Provide progress reports",
			"Strategic thinking",
			"Manage delivery",
			"Manage people",
			"Tools & process",
			"Build capability",
		],
		button: {
			text: "Get Started",
			link: "/contact",
		},
	},
	{
		name: "Stewardship Development Team",
		price: "$30,000/m",
		features: [
			"Includes 'Fractional CTO'",
			"Shape Up operating model",
			"Web and/or Mobile",
			"+ Senior Designer",
			"+ Prinicpal Developer",
			"+ Full Stack Developer",
		],
		button: {
			text: "Get Started",
			link: "/contact",
		},
	},
	{
		name: "Stewardship Development Team Plus",
		price: "$40,000/m",
		features: ["Includes 'Fraction CTO'", "Increase key metrics", "+ SEO Audit", "+ Data Analysis", "+ Martech Developer"],
		button: {
			text: "Get Started",
			link: "/contact",
		},
	},
];
---

<Layout title="Stewardship Ventures - Pricing">
	<Container>
		<Sectionhead>
			<Fragment slot="title">Pricing</Fragment>
			<Fragment slot="desc">Scale as needed to match your ambitions.</Fragment>
		</Sectionhead>

		<div class="grid md:grid-cols-2 gap-8 mx-auto max-w-4xl mt-20">
			{pricingData.map((item) => <PricingPlan plan={item} />)}
		</div>

		<div class="max-w-4xl mx-auto">
			<!-- Comparison Chart -->
			<div class="mb-8 dark:text-gray-200 rounded p-6 shadow-md">
				<h2 class="text-2xl font-bold mb-4">Outsource Comparison</h2>

				<div class="grid grid-cols-2 gap-4">
					<!-- Agency Service Pros -->
					<div class="bg-white dark:bg-gray-800 dark:text-gray-200 rounded p-6 shadow-md">
						<h3 class="text-lg font-semibold mb-4">Partner with Stewardship</h3>
						<ul>
							<li class="flex items-center mb-2 space-x-2">
								<svg
									class="h-4 w-4 text-green-500"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
									xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span>Expertise in diverse technologies</span>
							</li>
							<li class="flex items-center mb-2 space-x-2">
								<svg
									class="h-4 w-4 text-green-500"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
									xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span>Scalability and flexibility</span>
							</li>
							<!-- Add more pros as needed -->
						</ul>
					</div>

					<!-- In-house Development Cons -->
					<div class="bg-white dark:bg-gray-800 dark:text-gray-200 rounded p-6 shadow-md">
						<h3 class="text-lg font-semibold mb-4">Build a team from scratch</h3>
						<ul>
							<li class="flex items-center mb-2 space-x-2">
								<svg
									class="h-4 w-4 text-red-500"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
									xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
								</svg>
								<span>Limited expertise in specific areas</span>
							</li>
							<li class="flex items-center mb-2 space-x-2">
								<svg
									class="h-4 w-4 text-red-500"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
									xmlns="http://www.w3.org/2000/svg">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
								</svg>
								<span>Potential resource constraints</span>
							</li>
							<!-- Add more cons as needed -->
						</ul>
					</div>
				</div>
			</div>

			<!-- Timeline Comparison -->
			<div class="dark:text-gray-200 rounded p-6 shadow-md">
				<h2 class="text-2xl font-bold mb-4">Runway Impact</h2>

				<div class="flex items-center">
					<!-- Agency Service Timeline -->
					<div class="flex-1 bg-white dark:bg-gray-800 dark:text-gray-200 rounded p-6 shadow-md mb-4">
						<h3 class="text-lg font-semibold mb-4">Agency Service</h3>
						<!-- Add content for the timeline, e.g., milestones, timeframes, etc. -->
					</div>

					<!-- In-house Development Timeline -->
					<div class="flex-1 bg-white dark:bg-gray-800 dark:text-gray-200 rounded p-6 shadow-md mb-4">
						<h3 class="text-lg font-semibold mb-4">In-house Development</h3>
						<div class="mb-4">
							<p class="mb-2">Milestone 1: Research & Planning</p>
							<div class="relative pt-1">
								<div class="flex mb-2 items-center justify-between">
									<div class="flex-1 flex items-center">
										<div class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-teal-600 bg-teal-200">
											In Progress
										</div>
									</div>
									<div class="text-right">
										<span class="text-xs font-semibold inline-block text-teal-600">45%</span>
									</div>
								</div>
								<div class="flex mb-2 items-center justify-between">
									<div class="flex-1 flex items-center">
										<div class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-gray-600 bg-gray-200">
											Not Started
										</div>
									</div>
									<div class="text-right">
										<span class="text-xs font-semibold inline-block text-gray-600">0%</span>
									</div>
								</div>
								<div class="flex mb-2 items-center justify-between">
									<div class="flex-1 flex items-center">
										<div class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-red-600 bg-red-200">
											Delayed
										</div>
									</div>
									<div class="text-right">
										<span class="text-xs font-semibold inline-block text-red-600">10 days</span>
									</div>
								</div>
							</div>
						</div>
						<!-- Add more milestones and progress bars as needed -->
					</div>
				</div>
			</div>
		</div>
	</Container>
</Layout>
