---
import { changeLanguage } from "i18next";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

changeLanguage("en");
---

<Layout title="Stewardship Ventures - Contact">
	<Container>
		<Sectionhead>
			<Fragment slot="title">Contact</Fragment>
			<Fragment slot="desc">A partnership starts today.</Fragment>
		</Sectionhead>

		<div class="mt-16">
			<div class="mx-auto lg:px-8">
				<div class="flex flex-col items-center gap-8 mb-8">
					<div class="max-w-lg p-6 rounded-lg shadow text-center ring-2 dark:bg-neutral-800 dark:ring-neutral-700">
						<a href="https://app.cal.com/jayden" target="_blank">
							<h5 class="mb-2 text-2xl font-bold tracking-tight text-neutral-900 dark:text-white">Schedule a free consultation</h5>
						</a>
						<p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
							Let's turn your product vision into reality. Book a call to talk.
						</p>
						<a
							href="https://app.cal.com/jayden"
							target="_blank"
							class="inline-flex items-center transform transition-transform hover:scale-105 px-3 py-2 mt-4 text-sm font-medium text-center text-white rounded-lg hover:bg-neutral-800 focus:ring-4 focus:outline-none focus:ring-neutral-300 dark:bg-purple-700 dark:hover:bg-purple-700 dark:focus:ring-neutral-800">
							Book a call
							<svg
								class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
								aria-hidden="true"
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 14 10">
								<path
									stroke="currentColor"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M1 5h12m0 0L9 1m4 4L9 9">
								</path>
							</svg>
						</a>
					</div>

					<h2 class="text-3xl font-extrabold mt-10 dark:text-neutral-200 sm:text-4xl">Leave a Message</h2>
					<form
						action="https://usebasin.com/f/30ab27cba308"
						method="POST"
						class="max-w-md mx-auto dark:bg-neutral-800 p-6 rounded-md border-2 border-neutral-700 shadow-lg">
						<div class="mb-10">
							<label for="name" class="block text-neutral-600 dark:text-neutral-200 text-md font-medium mb-1">Name:</label>
							<input
								type="text"
								name="name"
								id="name"
								required
								class="w-full px-3 py-2 dark:text-neutral-200 bg-neutral-200 dark:bg-neutral-600 border-neutral-200 dark:border-neutral-500 rounded-md focus:outline-none focus:border-neutral-500"
							/>
						</div>
						<div class="mb-10">
							<label for="email" class="block text-neutral-600 dark:text-neutral-200 text-md font-medium mb-1">Email:</label>
							<input
								type="email"
								name="email"
								id="email"
								required
								class="w-full px-3 py-2 dark:text-neutral-200 bg-neutral-200 dark:bg-neutral-600 border-neutral-200 dark:border-neutral-500 rounded-md focus:outline-none focus:border-neutral-500"
							/>
						</div>
						<div class="mb-10">
							<label for="message" class="block text-neutral-600 dark:text-neutral-200 text-md font-medium mb-1">
								Leave a Message:
							</label>
							<textarea
								id="message"
								name="message"
								rows="5"
								cols="33"
								required
								class="w-full px-3 py-2 dark:text-neutral-200 border bg-neutral-200 dark:bg-neutral-600 border-neutral-200 dark:border-neutral-500 rounded-md">
							</textarea>
						</div>
						<button
							type="submit"
							class="text-neutral-200
								transform transition-transform hover:scale-105 mt-4 text-sm font-medium rounded-lg hover:bg-neutral-800 focus:ring-4 focus:outline-none focus:ring-neutral-300 dark:bg-orange-700 dark:hover:bg-orange-700 dark:focus:ring-neutral-800
								inline-flex items-center justify-center
								px-5
							w-full
							py-2.5
							me-2
							mb-2">
							Submit <svg
								class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
								aria-hidden="true"
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 14 10">
								<path
									stroke="currentColor"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M1 5h12m0 0L9 1m4 4L9 9">
								</path>
							</svg>
						</button>
					</form>
				</div>
			</div>
		</div>
	</Container>
</Layout>
