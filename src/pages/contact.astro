---
import { changeLanguage } from "i18next";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Booking from "@components/booking.astro";

changeLanguage("en");
---

<Layout title="Stewardship Ventures - Contact">
	<Container>
		<Sectionhead>
			<Fragment slot="title">Contact</Fragment>
			<Fragment slot="desc">A partnership starts today.</Fragment>
		</Sectionhead>

		<div class="mt-16">
			<div class="mx-auto lg:px-8">
				<div class="flex flex-col items-center gap-8 mb-8">
					<Booking />

					<iframe style="border:none;width:100%" height="600px" src="https://opnform.com/forms/contact-us-3joqj2"></iframe>
				</div>
			</div>
		</div>
	</Container>
</Layout>
